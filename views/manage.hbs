<section>
    <div class="bgc-white p-20 bd">
        <h6 class="c-grey-900">Add product</h6>
        <div class="mT-30">
            <form class="form-row" method="post" action="/manage/product-upload" enctype="multipart/form-data">
                <div class="form-group row col-12">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                    </div>
                </div>
                <div class="form-group row col-12">
                    <label for="quantity" class="col-sm-2 col-form-label">Quantity</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Quantity">
                    </div>
                </div>
                <div class="form-group row col-12">
                    <div class="col-sm-12">
                        <label for="description" class="col-form-label">
                            Description
                        </label>
                        <textarea class="form-control" id="description" name="description" placeholder="Description"></textarea>
                    </div>
                </div>
                <div class="form-group row col-12">
                    <label for="imageHigh" class="col-sm-2 col-form-label">Image high resolution</label>
                    <div class="col-sm-10">
                        <input type="file" accept="image/jpeg, image/png" class="form-control" id="imageHigh" name="imageHigh">
                    </div>
                </div>
                <div class="form-group row col-12">
                    <label for="imageLow" class="col-sm-2 col-form-label">Image low resolution</label>
                    <div class="col-sm-10">
                        <input type="file" accept="image/jpeg, image/png" class="form-control" id="imageLow" name="imageLow">
                    </div>
                </div>
                <div class="form-group row col-12">
                    <label for="keepImageName" class="col-sm-2 col-form-label">Keep the original image name</label>
                    <div class="col-sm-10">
                        <input type="checkbox" class="form-control" id="keepImageName" name="keepImageName">
                    </div>
                </div>
                <div class="form-group col-12">
                    <button type="submit" class="btn btn-dark">Upload</button>
                </div>

            </form>
        </div>
    </div>
</section>
